@model PagedList.IPagedList<WebPresentations.Models.Presentation>
@using WebPresentations.Helpers
@{
    ViewBag.Title = "Gallery";
    ViewBag.RedirectRoute = "Index";
}
<h2>Presentations gallery</h2>
    <div class="hero-unit">
        <div class="container-fluid">
            @foreach (var item in Model)
            {
                <div class="span3">
                    <a href = "@Url.Action("Preview", new {id = item.PresentationId})" class="thumbnail">
                        <img src="http://placehold.it/260x180" alt=""/>
                    </a>
                    <h2>@Html.Truncate(item.Title,10)</h2>
                    <p>@Html.Truncate(item.Description,20)</p>
                    <p><a href = "@Url.Action("Preview", new {id = item.PresentationId})" class="btn btn-primary btn-small">Preview &raquo;</a></p>           
                    <br />
                    <br />
                </div>

            }
        </div>
    </div>
@Html.Partial("_PageNavigatorPartial")