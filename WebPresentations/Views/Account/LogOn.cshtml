@model WebPresentations.Models.LogOnModel

@{
    ViewBag.Title = @ViewRes.SharedLayoutStrings.LogOn;
}

<h2>@ViewRes.SharedLayoutStrings.LogOn</h2>
<p>
    @ViewRes.SharedLayoutStrings.EnterYourNameAndPassword @Html.ActionLink(@ViewRes.SharedLayoutStrings.Register, "Register") @ViewRes.SharedLayoutStrings.IfNotRegistered.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, @ViewRes.SharedLayoutStrings.LoginFailed)

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value=@ViewRes.SharedLayoutStrings.LogOn />
            </p>
        </fieldset>
    </div>
}
