@if (Request.IsAuthenticated)
{
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-user">
    </i>@User.Identity.Name <span class="caret"></span></a>
    <ul class="dropdown-menu">
        @if (User.IsInRole("Administrator"))
        {
            
            <li><a href="@Url.Action("Index", "AdministrativeTool")" style="color:red">Administrative tool</a></li>
            <li class="divider"></li>            
        }
        <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
        <li class="divider"></li>
        <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>
    </ul>    
}
else
{    
    <a class="btn dropdown-toggle" href="@Url.Action("LogOn", "Account")">Log On</a>
}
